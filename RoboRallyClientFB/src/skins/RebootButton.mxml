<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				   minWidth="21"
				   minHeight="21" xmlns:mx="library://ns.adobe.com/flex/mx">

	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>

	<fx:Script fb:purpose="styling">
		<![CDATA[
			
		]]>
	</fx:Script>

	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	<s:Image source="@Embed(source='assets/RebootButton.png')"
			 width="100%"
			 height="100%"
			 includeIn="up,over">
		<s:filters>
			<s:DropShadowFilter distance="0" angle="45" blurX="20" blurY="20">
			</s:DropShadowFilter>
		</s:filters>
	</s:Image>
	<s:Image source="@Embed(source='assets/RebootButton2.png')"
			 width="100%"
			 height="100%"
			 includeIn="down,disabled">
		<s:filters>
			<s:DropShadowFilter distance="0" angle="45" blurX="20" blurY="20">
			</s:DropShadowFilter>
		</s:filters>
	</s:Image>

</s:SparkButtonSkin>
